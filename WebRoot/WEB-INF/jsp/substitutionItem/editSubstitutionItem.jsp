</form>

<script language="javascript">
	function simpan (){

		document.form1.method = "POST";
		document.form1.action = "substitutionitem-form";
		document.form1.submit();
	}
	function kembali (){
		document.form1.navigation.value = "back";
		document.form1.action = "substitutionitem";
		document.form1.submit();
	}
	// forreign affairs
		function lookupCostContainment (){
		window.open ("costcontainment?navigation=lookup&url=substitutionitem-form","Search","width=700, height=550, menubar=no, status=no, toolbar=no, scrollbars=yes, resizable=yes,screenX=200,screenY=100");
	}
	function setCostContainment (idx){
		document.form1.method = "POST";
		document.form1.notyet.value="true";
		document.form1.action = "substitutionitem-form";

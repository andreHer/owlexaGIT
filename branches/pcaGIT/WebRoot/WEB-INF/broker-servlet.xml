<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">
<beans>

	
	<bean id="brokerValidator" class="com.ametis.cms.web.validator.BrokerValidator"/>

	<bean id="urlMapping" class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping">
		<property name="mappings">
			<props>
				<prop key="/broker">brokerController</prop>
				<prop key="/broker-form">brokerFormController</prop>
			</props>
		</property>
	</bean>
	<bean id="viewResolver" class="org.springframework.web.servlet.view.InternalResourceViewResolver">
		<property name="viewClass">
			<value>org.springframework.web.servlet.view.JstlView</value>
		</property>
		<property name="prefix">
			<value>WEB-INF/jsp/broker/</value>
		</property>
		<property name="suffix">
			<value>.jsp</value>
		</property>
	</bean>
	<bean name="brokerController" class="com.ametis.cms.web.controller.BrokerController">
		<property name="brokerService">
			<ref bean="brokerService" />
		</property>
		<property name="securityService">
			<ref bean="securityService" />
		</property>
		<property name="countSet">
			<ref bean="countSet" />
		</property>
		<property name="maxPercountSet">
			<ref bean="maxPercountSet" />
		</property>
		<property name="alertProperties">
			<ref bean="alertProperties" />
		</property>

				<property name="userService">
			<ref bean="userService" />
		</property>
		<property name="logService">
            <ref bean="activityLogService" />
        </property>
	</bean>

	<bean name="brokerFormController" class="com.ametis.cms.web.controller.BrokerFormController">
		<property name="formView" value="editBroker"/>
		<property name="successView" value="ownerRedirect"/>
		<property name="validator" ref="brokerValidator"/>
		<property name="commandName" value="brokerForm" />
		<property name="commandClass" value="com.ametis.cms.web.form.BrokerForm" />
<property name="logService">
            <ref bean="activityLogService" />
        </property>
		<property name="brokerService">
			<ref bean="brokerService" />
		</property>


				<property name="userService">
			<ref bean="userService" />
		</property>
		

<property name="securityService">
			<ref bean="securityService" />
		</property>
		<property name="propertiesUtil">
			<ref bean="alertProperties" />
		</property>

<!-- foreign affairs -->
	
		
<!-- foreign affairs end -->

	</bean>
	<bean id="alertProperties" class="org.springframework.context.support.ResourceBundleMessageSource">
		<property name="basename"><value>com.ametis.cms.messages.broker</value></property>
	</bean>
</beans>


